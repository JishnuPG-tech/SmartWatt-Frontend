# NPM Configuration for SmartWatt Frontend

# Use the default npm registry
registry=https://registry.npmjs.org/

# Prefer online packages to avoid cache corruption
prefer-online=true

# Disable audit to speed up installs
audit=false

# Set fetch retry parameters for better reliability
fetch-retries=5
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Timeout settings
fetch-timeout=300000

# Engine strict - ensure Node version compatibility
engine-strict=true

# Progress bar
progress=true

# Save exact versions in package-lock.json
save-exact=false

# Legacy peer deps handling (for compatibility)
legacy-peer-deps=false
